{
  "name": "datacommons-mcp-dev",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {},
  "postCreateCommand": "pip install --upgrade pip && pip install uv && uv pip install -e .[test]",
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.debugpy"
      ]
    }
  },
  "remoteEnv": {
    "DC_API_KEY": "REPLACE_ME"
  }
}
